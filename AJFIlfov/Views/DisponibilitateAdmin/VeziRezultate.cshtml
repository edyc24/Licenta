@model IEnumerable<AJFIlfov.BusinessLogic.Implementation.DisponibilitateAdminService.Models.RefereeAvailabilityModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Vezi Rezultate</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/DisponibilitateAdmin/VeziRezultate.css" />
</head>
<body>

    <div class="container">
        <div class="header">
            <h1>Disponibilitatea Arbitrilor pentru ziua @ViewBag.SelectedDay.ToString("dd/MM/yyyy")</h1>
        </div>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nume Arbitru</th>
                        <th>Disponibilitate</th>
                        <th>Ora Începere</th>
                        <th>Ora Încheiere</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var referee in Model)
                    {
                        @if (!referee.Availability.Any())
                        {
                            <tr>
                                <td>@referee.RefereeName</td>
                                <td colspan="3">Indisponibil</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var availability in referee.Availability)
                            {
                                <tr>
                                    <td>@referee.RefereeName</td>
                                    <td>@availability.Status</td>
                                    <td>@(availability.Status == "Disponibil" || availability.Status == "DisponibilPartial" ? availability.OraIncepere ?? "N/A" : "N/A")</td>
                                    <td>@(availability.Status == "Disponibil" || availability.Status == "DisponibilPartial" ? availability.OraIncheiere ?? "N/A" : "N/A")</td>
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

</body>
</html>
