@model AJFIlfov.BusinessLogic.Implementation.MeciuriService.Models.MeciArbitruModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/Meciuri/Edit.css" />
</head>
<body>

    <div class="container">
        <h2>@ViewData["Title"]</h2>

        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="IdMeci" />

            <div class="form-group">
                <label asp-for="Rezultat" class="control-label">Rezultat</label>
                <input asp-for="Rezultat" class="form-control" placeholder="Introduceți rezultatul" />
                <span asp-validation-for="Rezultat" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Observatii" class="control-label">Observații</label>
                <textarea asp-for="Observatii" class="form-control" rows="4" placeholder="Introduceți observațiile"></textarea>
                <span asp-validation-for="Observatii" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Raport" class="control-label">Raport (doar PDF)</label>
                <input asp-for="Raport" class="form-control-file" type="file" accept="application/pdf" />
                <span asp-validation-for="Raport" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvați" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Anulați</a>
            </div>
        </form>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
