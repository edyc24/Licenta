@inject AJFIlfov.Common.DTOs.CurrentUserDto CurrentUser

<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AJFIlfov</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Custom styles for the navigation menu */
        .navbar-nav .nav-item .nav-link {
            color: #343a40;
            font-size: 1.1rem;
        }

            .navbar-nav .nav-item .nav-link:hover {
                color: #007bff;
            }

        .dropdown-menu .dropdown-item {
            color: #343a40;
        }

            .dropdown-menu .dropdown-item:hover {
                background-color: #f8f9fa;
            }

        .footer {
            background-color: #f8f9fa;
            padding: 20px 0;
        }

        .container-fluid {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        /* Stiluri pentru a deschide dropdown-ul la hover */
        .nav-item.dropdown:hover .dropdown-menu {
            display: block;
            margin-top: 0; /* elimină decalajul implicit */
        }

        /* Stiluri pentru a schimba cursorul pe elementele dropdown */
        .nav-item.dropdown:hover > .nav-link,
        .nav-item.dropdown:hover > .nav-link::after {
            cursor: pointer;
        }

        /* Împiedică linkurile să se evidențieze pe mobil când sunt clicate */
        .nav-item.dropdown > .dropdown-toggle::after {
            display: none;
        }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AJFIlfov</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Acasă</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-calendar-alt"></i> Meciuri
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <li><a class="dropdown-item" asp-controller="Meciuri" asp-action="Index">Toate Meciurile</a></li>
                                <li><a class="dropdown-item" asp-controller="Meciuri" asp-action="Create">Creare Meci</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink2" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-users"></i> Echipe
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink2">
                                <li><a class="dropdown-item" asp-controller="Echipe" asp-action="Index">Toate Echipele</a></li>
                                <li><a class="dropdown-item" asp-controller="Echipe" asp-action="Create">Creare Echipa</a></li>
                            </ul>
                        </li>
                        @if (CurrentUser.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownDisponibilitati" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-calendar-check"></i> Disponibilități
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdownDisponibilitati">
                                    <li><a class="dropdown-item" asp-controller="Disponibilitate" asp-action="Index">Disponibilitățile Mele</a></li>
                                    @if (CurrentUser.Role == "Administrator")
                                    {
                                        <li><a class="dropdown-item" asp-controller="DisponibilitateAdmin" asp-action="Index">Cereri Disponibilitate</a></li>
                                    }
                                </ul>
                            </li>
                            @if (CurrentUser.Role == "Administrator")
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownAdmin" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-user-shield"></i> Admin
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdownAdmin">
                                        <li><a class="dropdown-item" asp-controller="Grupe" asp-action="Index">Grupe</a></li>
                                        <li><a class="dropdown-item" asp-controller="Stadioane" asp-action="Index">Stadioane</a></li>
                                        <li><a class="dropdown-item" asp-controller="Localitati" asp-action="Index">Localități</a></li>
                                        <li><a class="dropdown-item" asp-controller="Users" asp-action="Index">Gestionare Utilizatori</a></li>
                                    </ul>
                                </li>
                            }
                        }
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        @if (CurrentUser.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-circle"></i> @CurrentUser.FirstName
                                </a>
                                <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="ProfilePage">Profilul Meu</a></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout"><i class="fas fa-sign-out-alt"></i> Log out</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login"><i class="fas fa-sign-in-alt"></i> Log in</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register"><i class="fas fa-user-plus"></i> Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container text-center">
            &copy; 2024 - AJFIlfov - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <!-- Include jQuery and Bootstrap JS at the end of the body -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.6/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        // Detectează dacă dispozitivul este de tip touch și dezactivează hover-ul pe dropdown
        document.addEventListener('DOMContentLoaded', function () {
            if ('ontouchstart' in document.documentElement) {
                var dropdowns = document.querySelectorAll('.navbar .dropdown-toggle');
                dropdowns.forEach(function (dropdown) {
                    dropdown.addEventListener('click', function (e) {
                        if (dropdown.nextElementSibling && !dropdown.nextElementSibling.classList.contains('show')) {
                            e.preventDefault();
                            e.stopPropagation();
                            dropdown.parentElement.classList.toggle('show');
                            dropdown.nextElementSibling.classList.toggle('show');
                        }
                    });
                });

                document.addEventListener('click', function (e) {
                    if (!e.target.closest('.navbar .dropdown')) {
                        var openDropdowns = document.querySelectorAll('.navbar .dropdown.show');
                        openDropdowns.forEach(function (openDropdown) {
                            openDropdown.classList.remove('show');
                            openDropdown.querySelector('.dropdown-menu').classList.remove('show');
                        });
                    }
                });
            }
        });
    </script>

</body>
</html>
