@model AJFIlfov.BusinessLogic.Implementation.StadionLocalitateService.Models.StadionLocalitateModel

@{
    ViewData["Title"] = "Edit Stadion Localitate";
}

<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/StadionLocalitate/Edit.css" />
</head>
<body>

    <div class="container">
        <h2>@ViewData["Title"]</h2>

        <form asp-action="Edit" method="post">
            <div class="form-group">
                <label asp-for="IdStadion" class="control-label">Stadion</label>
                <select asp-for="IdStadion" class="form-control" asp-items="@(new SelectList(ViewBag.Stadioane, "IdStadion", "Nume"))">
                    <option value="">-- Selectează Stadion --</option>
                </select>
                <span asp-validation-for="IdStadion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdLocalitate" class="control-label">Localitate</label>
                <select asp-for="IdLocalitate" class="form-control" asp-items="@(new SelectList(ViewBag.Localitati, "IdLocalitate", "Nume"))">
                    <option value="">-- Selectează Localitate --</option>
                </select>
                <span asp-validation-for="IdLocalitate" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="IdStadionLocalitate" />
            <div class="form-group text-center">
                <input type="submit" value="Salvează" class="btn btn-primary btn-lg mx-2" />
                <a asp-action="Index" class="btn btn-secondary btn-lg mx-2">Anulează</a>
            </div>
        </form>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

</body>
</html>
