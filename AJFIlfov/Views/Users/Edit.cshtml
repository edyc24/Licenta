@model AJFIlfov.BusinessLogic.Implementation.User.Models.UserManagmentModel

@{
    ViewData["Title"] = "Editează Utilizator";
}

<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/Users/Edit.css" />
</head>
<body>

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Role" class="control-label">Rol</label>
                    <select asp-for="Role" class="form-control">
                        <option value="">Selectează Rol</option>
                            @foreach (var role in Model.Roles)
                            {
                                <option value="@role.Value">@role.Value</option>
                            }
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                    <div class="form-group">
                        <label asp-for="Category" class="control-label">Rol</label>
                        <select asp-for="Category" class="form-control">
                            <option value="">Selectează Categorie</option>
                            @foreach (var role in Model.Categorii)
                            {
                                <option value="@role.Value">@role.Value</option>
                            }
                        </select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>

                <div class="form-group">
                    <label asp-for="FirstName" class="control-label">Prenume</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LastName" class="control-label">Nume</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="BirthDay" class="control-label">Data Nașterii</label>
                    <input asp-for="BirthDay" class="form-control" type="date" />
                    <span asp-validation-for="BirthDay" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label">Email</label>
                    <input asp-for="Email" class="form-control" readonly />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="RegistrationDay" class="control-label">Data Înregistrării</label>
                    <input asp-for="RegistrationDay" class="form-control" type="date" />
                    <span asp-validation-for="RegistrationDay" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ProfileDescription" class="control-label">Descriere Profil</label>
                    <textarea asp-for="ProfileDescription" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="ProfileDescription" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Salvează" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Anulează</a>
                </div>
            </form>
        </div>
    </div>
</div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

</body>
</html>
