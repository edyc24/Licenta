@model AJFIlfov.BusinessLogic.Implementation.Account.Models.UserAddressViewModel

<h2 class="page-title-alt">Editare adresă</h2>

<div class="address-container">
    <form asp-action="EditAddress" class="address-form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="UserId" />

        <div class="form-group">
            <label asp-for="StreetAddress" class="address-label">Adresă stradală</label>
            <input asp-for="StreetAddress" class="address-input" />
            <span asp-validation-for="StreetAddress" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="City" class="address-label">Oraș</label>
            <input asp-for="City" class="address-input" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="State" class="address-label">Județ</label>
            <input asp-for="State" class="address-input" />
            <span asp-validation-for="State" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ZipCode" class="address-label">Cod poștal</label>
            <input asp-for="ZipCode" class="address-input" />
            <span asp-validation-for="ZipCode" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Country" class="address-label">Țară</label>
            <input asp-for="Country" class="address-input" />
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>

        <button type="submit" class="address-button">Salvează</button>
    </form>

    <div class="links-container">
        <a asp-action="ProfilePage" asp-route-userId="@Model.UserId" class="address-link">Înapoi la profil</a>
    </div>
</div>

<style>
    body {
        background-image: none;
        background: linear-gradient(135deg, #0f0c29, #302b63, #24243e);
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    .page-title-alt {
        text-align: center;
        font-size: 2.5rem;
        color: #00e0ff;
        margin-bottom: 2rem;
    }

    .address-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 0 auto;
        padding: 2rem;
        background-color: rgba(255, 255, 255, 0.1);
        border-radius: var(--radius-huge);
        max-width: 500px;
    }

    .address-form {
        width: 100%;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        margin-bottom: 2rem;
    }

    .address-label {
        font-size: 1.2rem;
        color: #00e0ff;
        margin-bottom: 0.6rem;
        display: inline-block;
        font-weight: bold;
    }

    .address-input {
        width: 100%;
        padding: 0.7rem;
        font-size: 1.1rem;
        border-radius: 0.6rem;
        border: 1px solid #00e0ff;
        background-color: #24243e;
        color: #ffffff;
    }

    .address-input::placeholder {
        color: #999999;
    }

    .text-danger {
        color: #ff4081;
        font-size: 0.9rem;
        margin-top: 0.3rem;
    }

    .address-button {
        width: 100%;
        padding: 1rem;
        color: #ffffff;
        font-weight: bold;
        font-size: 1.2rem;
        border: none;
        cursor: pointer;
        display: block;
        margin: 1.5rem 0;
        background-color: rgba(255, 255, 255, 0.1);
        transition: background-color 0.3s, color 0.3s;
        border-radius: var(--radius-big);
    }

    .address-button:hover {
        background-color: #ff4081;
        color: #ffffff;
    }

    .links-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
        margin-top: 1.5rem;
        width: 100%;
    }

    .address-link {
        width: 100%;
        padding: 1rem;
        color: #00e0ff;
        text-decoration: none;
        font-size: 1.1rem;
        text-align: center;
        background-color: rgba(255, 255, 255, 0.1);
        border-radius: var(--radius-big);
        transition: background-color 0.3s, color 0.3s;
    }

    .address-link:hover {
        background-color: #ff4081;
        color: #ffffff;
    }

    footer {
        margin-top: auto;
    }

    @@media (max-width: 480px) {
        .page-title-alt {
            font-size: 1.8rem;
        }

        .address-container {
            padding: 1.5rem;
            margin: 1rem;
        }

        .address-input {
            font-size: 0.9rem;
        }

        .address-button,
        .address-link {
            font-size: 1rem;
            padding: 0.8rem;
        }
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
