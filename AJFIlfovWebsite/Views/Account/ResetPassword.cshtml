<h2 class="page-title-alt">Resetare parolă</h2>

<div class="reset-container">
    <form class="reset-form">
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-info">@ViewBag.Message</div>
        }

        <div class="form-group">
            <label for="Email" class="reset-label">Email</label>
            <input type="email" id="Email" name="Email" class="reset-input" required>
        </div>

        <button type="button" class="reset-button">Trimite link de resetare</button>
    </form>
</div>

<style>
    body {
        background-image: none;
        background: linear-gradient(135deg, #0f0c29, #302b63, #24243e);
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    .page-title-alt {
        text-align: center;
        font-size: 2.5rem;
        color: #00e0ff;
        margin-bottom: 2rem;
    }

    .reset-container {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        margin: 0 auto;
        padding: 2rem;
        background-color: rgba(255, 255, 255, 0.1);
        border-radius: var(--radius-huge);
        max-width: 500px;
    }

    .reset-form {
        width: 100%;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        margin-bottom: 2rem;
    }

    .reset-label {
        font-size: 1.2rem;
        color: #00e0ff;
        margin-bottom: 0.6rem;
        display: inline-block;
        font-weight: bold;
    }

    .reset-input {
        width: 100%;
        padding: 0.7rem;
        font-size: 1.1rem;
        border-radius: 0.6rem;
        border: 1px solid #00e0ff;
        background-color: #24243e;
        color: #ffffff;
    }

        .reset-input::placeholder {
            color: #999999;
        }

    .alert {
        padding: 1rem;
        margin-bottom: 1.5rem;
        border-radius: 0.6rem;
        background-color: rgba(0, 224, 255, 0.1);
        border: 1px solid #00e0ff;
        color: #ffffff;
        text-align: center;
    }

    .reset-button {
        width: 100%;
        padding: 1rem;
        color: #ffffff;
        font-weight: bold;
        font-size: 1.2rem;
        border: none;
        cursor: pointer;
        display: block;
        margin: 1.5rem 0;
        background-color: rgba(255, 255, 255, 0.1);
        transition: background-color 0.3s, color 0.3s;
        border-radius: var(--radius-big);
    }

        .reset-button:hover {
            background-color: #ff4081;
            color: #ffffff;
        }

    footer {
        margin-top: auto;
    }

    @@media (max-width: 480px) {
        .page-title-alt {
            font-size: 1.8rem;
        }

        .reset-container {
            padding: 1.5rem;
            margin: 1rem;
        }

        .reset-input {
            font-size: 0.9rem;
        }

        .reset-button {
            font-size: 1rem;
            padding: 0.8rem;
        }
    }
</style>

<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="~/js/Account/ResetPassword.js"></script>