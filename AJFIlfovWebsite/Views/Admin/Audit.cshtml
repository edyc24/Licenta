@model IEnumerable<AJFIlfov.BusinessLogic.Implementation.Audituri.Models.AuditModel>

@{
    ViewData["Title"] = "Jurnal de Audit";
}

<div class="container my-5">
    <h2 class="text-center mb-4">Jurnal de Audit</h2>

    <!-- Filter Section -->
    <div class="filter-section mb-4">
        <div class="row">
            <div class="col-md-4">
                <label for="nameFilter">Filtrează după nume:</label>
                <input type="text" id="nameFilter" class="form-control" placeholder="Introduceți numele utilizatorului" onkeyup="filterLogs()" />
            </div>
            <div class="col-md-4">
                <label for="dateFilter">Filtrează după dată:</label>
                <input type="date" id="dateFilter" class="form-control" onchange="filterLogs()" />
            </div>
        </div>
    </div>

    <!-- Audit Log Table -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered" id="auditTable">
            <thead>
                <tr>
                    <th>Utilizator</th>
                    <th>Acțiune</th>
                    <th>Data și ora</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in Model)
                {
                    <tr>
                        <td>@log.Username</td>
                        <td>@log.ActionPerformed</td>
                        <td>@log.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Styles {
    <style>
        /* Custom styles for the Audit Log */
        .table thead th {
            background-color: #007acc;
            color: #ffffff;
            border: none;
        }

        .table tbody tr:hover {
            background-color: #f2f2f2;
        }

        .table td, .table th {
            vertical-align: middle;
        }

        /* Spacing between rows */
        .table tbody tr {
            height: 60px;
        }

        /* Filter section styling */
        .filter-section label {
            font-weight: bold;
            color: #007acc;
        }

        .filter-section .form-control {
            border-radius: 5px;
        }
    </style>
}

@section Scripts {
    <script>
        function filterLogs() {
            const nameFilter = document.getElementById('nameFilter').value.toLowerCase();
            const dateFilter = document.getElementById('dateFilter').value;
            const table = document.getElementById('auditTable');
            const rows = table.getElementsByTagName('tr');

            // Loop through all table rows (except the first, which contains table headers)
            for (let i = 1; i < rows.length; i++) {
                const cells = rows[i].getElementsByTagName('td');
                const userName = cells[0].innerText.toLowerCase();
                const actionDate = cells[2].innerText.substring(0, 10); // Extract date in 'yyyy-MM-dd' format

                let nameMatches = true;
                let dateMatches = true;

                // Check if name matches
                if (nameFilter && !userName.includes(nameFilter)) {
                    nameMatches = false;
                }

                // Check if date matches
                if (dateFilter && actionDate !== dateFilter) {
                    dateMatches = false;
                }

                // Show or hide the row based on filters
                if (nameMatches && dateMatches) {
                    rows[i].style.display = '';
                } else {
                    rows[i].style.display = 'none';
                }
            }
        }
    </script>
}
