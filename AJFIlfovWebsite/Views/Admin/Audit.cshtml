@model IEnumerable<AJFIlfov.BusinessLogic.Implementation.Audituri.Models.AuditModel>

@{
    ViewData["Title"] = "Jurnal de audit";
}

<h2 class="page-title-alt">Jurnal de audit</h2>

<div class="audit-container">
    <div class="filter-section">
        <div class="filter-group">
            <label for="nameFilter" class="audit-label">Filtrează după nume:</label>
            <input type="text" id="nameFilter" class="audit-input" placeholder="Introduceți numele utilizatorului" onkeyup="filterLogs()" />
        </div>
        <div class="filter-group">
            <label for="dateFilter" class="audit-label">Filtrează după dată:</label>
            <input type="date" id="dateFilter" class="audit-input" onchange="filterLogs()" />
        </div>
    </div>

    <div class="table-responsive">
        <table class="audit-table" id="auditTable">
            <thead>
                <tr>
                    <th>Utilizator</th>
                    <th>Acțiune</th>
                    <th>Data și ora</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in Model)
                {
                    <tr>
                        <td>@log.Username</td>
                        <td>@log.ActionPerformed</td>
                        <td>@log.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Styles {
    <style>
        body {
            background-image: none;
            background: linear-gradient(135deg, #0f0c29, #302b63, #24243e);
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .audit-container {
            padding-top: 2rem;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: var(--radius-huge);
        }

        .audit-title {
            text-align: center;
            font-size: 2.5rem;
            color: #00e0ff;
            margin-bottom: 1.1rem;
        }

        .filter-section {
            display: flex;
            justify-content: center;
            gap: 1.1rem;
            margin-bottom: 2rem;
        }

        .filter-group {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .audit-label {
            font-size: 1.2em;
            color: #00e0ff;
            margin-bottom: 0.6rem;
        }

        .audit-input {
            width: 250px;
            padding: 0.6rem;
            font-size: 1em;
            border: 1px solid #00e0ff;
            background-color: #24243e;
            color: #ffffff;
            border-radius: var(--radius-big);
        }

            .audit-input:focus {
                outline: none;
                border-color: #ff4081;
            }

        .audit-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 1.1rem;
        }

            .audit-table th,
            .audit-table td {
                padding: 15px;
                text-align: center;
                color: #ffffff;
                border-bottom: 1px solid #00e0ff;
            }

            .audit-table tr:last-child td {
                border-bottom: none;
            }

            .audit-table th {
                background-color: #007acc;
            }

            .audit-table tbody tr:hover {
                background-color: rgba(255, 255, 255, 0.1);
            }

        footer {
            margin-top: auto;
        }

        @@media (max-width: 768px) {
            .audit-container {
                margin: 1.1rem;
                padding: 0.6rem;
            }

            .audit-title {
                font-size: 2em;
            }

            .filter-section {
                flex-direction: column;
                gap: 0.6rem;
            }

            .audit-input {
                width: 100%;
            }
        }

        @@media (max-width: 480px) {
            .audit-title {
                font-size: 1.8em;
            }

            .audit-input {
                font-size: 0.9em;
            }

            .audit-table th,
            .audit-table td {
                font-size: 0.9em;
                padding: 0.6rem;
            }
        }
    </style>
}

@section Scripts {
    <script>
        function filterLogs() {
            const nameFilter = document.getElementById('nameFilter').value.toLowerCase();
            const dateFilter = document.getElementById('dateFilter').value;
            const table = document.getElementById('auditTable');
            const rows = table.getElementsByTagName('tr');

            // Loop through all table rows (except the first, which contains table headers)
            for (let i = 1; i < rows.length; i++) {
                const cells = rows[i].getElementsByTagName('td');
                const userName = cells[0].innerText.toLowerCase();
                const actionDate = cells[2].innerText.substring(0, 10); // Extract date in 'yyyy-MM-dd' format

                let nameMatches = true;
                let dateMatches = true;

                // Check if name matches
                if (nameFilter && !userName.includes(nameFilter)) {
                    nameMatches = false;
                }

                // Check if date matches
                if (dateFilter && actionDate !== dateFilter) {
                    dateMatches = false;
                }

                // Show or hide the row based on filters
                if (nameMatches && dateMatches) {
                    rows[i].style.display = '';
                } else {
                    rows[i].style.display = 'none';
                }
            }
        }
    </script>
}