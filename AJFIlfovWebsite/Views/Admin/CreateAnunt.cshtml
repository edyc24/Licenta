@model AJFIlfov.BusinessLogic.Implementation.Anunturi.Models.AnuntModel

<div class="create-announcement-container">
    <h2 class="futuristic-title">Creează un anunț</h2>

    <form asp-action="CreateAnunt" method="post" enctype="multipart/form-data" class="announcement-form">
        <div class="form-group">
            <label for="Titlu" class="futuristic-label">Titlu</label>
            <input type="text" class="futuristic-input" asp-for="Titlu" placeholder="Introdu titlul anunțului" />
        </div>

        <div class="form-group">
            <label for="Continut" class="futuristic-label">Conținut</label>
            <textarea class="futuristic-input large-textarea" asp-for="Continut" placeholder="Introdu conținutul anunțului"></textarea>
        </div>

        <div class="form-group">
            <label for="TipAnunt" class="futuristic-label">Tip Anunț</label>
            <select class="futuristic-input" asp-for="TipAnunt">
                <option value="">Selectează tipul anunțului</option>
                <option value="Informatii">Informații</option>
                <option value="Competitii">Competiții</option>
                <option value="Comisia de disciplina">Comisia de disciplina</option>
                <option value="Comisia pentru statul jucatorului">Comisia pentru statul jucatorului</option>
                <option value="Comisia de apel">Comisia de apel</option>
            </select>
        </div>

        <div class="form-group">
            <label for="Imagine" class="futuristic-label">Fișier PDF</label>
            <input type="file" class="futuristic-input" asp-for="Imagine" accept="application/pdf" />
        </div>

        <div class="form-group">
            <label for="ImagineAnunt" class="futuristic-label">Imagine Comunicat (doar pentru Comunicate)</label>
            <input type="file" class="futuristic-input" asp-for="ImagineAnunt" accept="application/jpg" />
        </div>

        <button type="submit" class="btn-futuristic">Salvează</button>
    </form>
</div>

<style>
    /* General styles */
    body {
        background: linear-gradient(135deg, #0f0c29, #302b63, #24243e);
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    .create-announcement-container {
        margin: 60px 80px;
        padding: 20px;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border-radius: 20px;
    }

    .futuristic-title {
        text-align: center;
        font-size: 2.5em;
        color: #00e0ff;
        margin-bottom: 20px;
    }

    /* Form styling */
    .announcement-form .form-group {
        margin-bottom: 30px;
        width: 80%;
        margin-left: auto;
        margin-right: auto;
    }

    .futuristic-label {
        font-size: 1.2em;
        color: #00e0ff;
        margin-bottom: 10px;
        display: inline-block;
    }

    .futuristic-input {
        width: 100%;
        padding: 12px;
        font-size: 1.1em;
        border-radius: 10px;
        border: 1px solid #00e0ff;
        background-color: #24243e;
        color: #ffffff;
    }

        .futuristic-input::placeholder {
            color: #999;
        }

    /* Larger textarea for content */
    .large-textarea {
        height: 300px;
        padding: 20px;
    }

    /* Button styling */
    .btn-futuristic {
        width: 80%;
        padding: 15px;
        background-color: #00e0ff;
        color: #ffffff;
        font-weight: 600;
        font-size: 1.2em;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        display: block;
        margin: 20px auto;
        transition: background-color 0.3s;
    }

        .btn-futuristic:hover {
            background-color: #ff4081;
        }

    /* Responsive styles */
    @@media (max-width: 768px) {
        .create-announcement-container {
            margin: 20px;
            padding: 10px;
        }

        .futuristic-title {
            font-size: 2em;
        }

        .futuristic-input {
            font-size: 1em;
        }
    }

    @@media (max-width: 480px) {
        .futuristic-title {
            font-size: 1.8em;
        }

        .futuristic-input {
            font-size: 0.9em;
        }

        .btn-futuristic {
            font-size: 1em;
            padding: 10px;
        }
    }
</style>