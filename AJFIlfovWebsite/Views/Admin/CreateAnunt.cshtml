@model AJFIlfov.BusinessLogic.Implementation.Anunturi.Models.AnuntModel

<h2 class="page-title-alt">Creează un anunț</h2>

<div class="create-announcement-container">
    <form asp-action="CreateAnunt" method="post" enctype="multipart/form-data" class="announcement-form">
        <div class="form-group">
            <label for="Titlu" class="announcement-label">Titlu</label>
            <input type="text" class="announcement-input" asp-for="Titlu" placeholder="Introdu titlul anunțului" />
        </div>

        <div class="form-group">
            <label for="Continut" class="announcement-label">Conținut</label>
            <textarea class="announcement-input large-textarea" asp-for="Continut" placeholder="Introdu conținutul anunțului"></textarea>
        </div>

        <div class="form-group">
            <label for="TipAnunt" class="announcement-label">Tip anunț</label>
            <select class="announcement-input" asp-for="TipAnunt">
                <option value="">Selectează tipul anunțului</option>
                <option value="Informatii">Informații</option>
                <option value="Competitii">Competiții</option>
                <option value="Comisia de disciplina">Comisia de disciplina</option>
                <option value="Comisia pentru statul jucatorului">Comisia pentru statul jucatorului</option>
                <option value="Comisia de apel">Comisia de apel</option>
            </select>
        </div>

        <div class="form-group">
            <label for="Imagine" class="announcement-label">Fișier PDF</label>
            <input type="file" class="announcement-input" asp-for="Imagine" accept="application/pdf" />
        </div>

        <div class="form-group">
            <label for="ImagineAnunt" class="announcement-label">Imagine comunicat (doar pentru comunicate)</label>
            <input type="file" class="announcement-input" asp-for="ImagineAnunt" accept="application/jpg" />
        </div>

        <button type="submit" class="announcement-submit">Salvează</button>
    </form>
</div>

<style>
    body {
        background-image: none;
        background: linear-gradient(135deg, #0f0c29, #302b63, #24243e);
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    .create-announcement-container {
        padding: 2rem;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border-radius: var(--radius-huge);
    }

    .announcement-form .form-group {
        margin-bottom: 2rem;
        margin-left: auto;
        margin-right: auto;
    }

    .announcement-label {
        font-size: 1.2rem;
        color: #00e0ff;
        margin-bottom: 0.6rem;
        display: inline-block;
        font-weight: bold;
    }

    .announcement-input {
        width: 100%;
        padding: 0.7rem;
        font-size: 1.1rem;
        border-radius: 0.6rem;
        border: 1px solid #00e0ff;
        background-color: #24243e;
        color: #ffffff;
    }

        .announcement-input::placeholder {
            color: #999999;
        }

    select.announcement-input {
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;
        background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='%2300e0ff'%3e%3cpath d='M7 10l5 5 5-5z'/%3e%3c/svg%3e");
        background-repeat: no-repeat;
        background-position: right 0.7rem center;
        background-size: 1.5rem;
        padding-right: 2.5rem;
    }

        select.announcement-input::-ms-expand {
            display: none;
        }

    .large-textarea {
        height: 300px;
        padding: 1.1rem;
    }

    .announcement-submit {
        width: 80%;
        padding: 1rem;
        color: #ffffff;
        font-weight: bold;
        font-size: 1.2rem;
        border: none;
        border-radius: 0.6rem;
        cursor: pointer;
        display: block;
        margin: 1.1rem auto;
        background-color: rgba(255, 255, 255, 0.1);
        transition: background-color 0.3s, color 0.3s;
        border-radius: var(--radius-big);
    }

        .announcement-submit:hover {
            background-color: #ff4081;
            color: #ffffff;
        }

    footer {
        margin-top: auto;
    }

    @@media (max-width: 480px) {
        .announcement-input {
            font-size: 0.9rem;
        }

        .announcement-submit {
            font-size: 1rem;
            padding: 0.6rem;
        }
    }
</style>