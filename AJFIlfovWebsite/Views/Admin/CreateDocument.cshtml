@{
    ViewData["Title"] = "Adăugați un Document";
}

<div class="create-document-container">
    <h2 class="futuristic-title">Adăugați un Document</h2>

    <form method="post" enctype="multipart/form-data" class="document-form">
        <div class="form-group">
            <label for="NumeDocument" class="futuristic-label">Nume Document:</label>
            <input type="text" id="NumeDocument" name="NumeDocument" class="futuristic-input" placeholder="Introduceți numele documentului" required />
        </div>
        <div class="form-group">
            <label for="PdfFile" class="futuristic-label">Fișier PDF:</label>
            <input type="file" id="PdfFile" name="PdfFile" class="futuristic-input" accept=".pdf" required />
        </div>
        <button type="submit" class="btn-futuristic">Adaugă</button>
    </form>
</div>

<style>
    /* General styles */
    body {
        background: linear-gradient(135deg, #0f0c29, #302b63, #24243e);
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    .create-document-container {
        margin: 60px 80px;
        padding: 20px;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border-radius: 20px;
    }

    .futuristic-title {
        text-align: center;
        font-size: 2.5em;
        color: #00e0ff;
        margin-bottom: 20px;
    }

    /* Form styling */
    .document-form .form-group {
        margin-bottom: 30px;
        width: 80%;
        margin-left: auto;
        margin-right: auto;
    }

    .futuristic-label {
        font-size: 1.2em;
        color: #00e0ff;
        margin-bottom: 10px;
        display: inline-block;
    }

    .futuristic-input {
        width: 100%;
        padding: 12px;
        font-size: 1.1em;
        border-radius: 10px;
        border: 1px solid #00e0ff;
        background-color: #24243e;
        color: #ffffff;
    }

    .futuristic-input::placeholder {
        color: #999;
    }

    /* Button styling */
    .btn-futuristic {
        width: 80%;
        padding: 15px;
        background-color: #00e0ff;
        color: #ffffff;
        font-weight: 600;
        font-size: 1.2em;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        display: block;
        margin: 20px auto;
        transition: background-color 0.3s;
    }

    .btn-futuristic:hover {
        background-color: #ff4081;
    }

    /* Responsive styles */
    @@media (max-width: 768px) {
        .create-document-container {
            margin: 20px;
            padding: 10px;
        }

        .futuristic-title {
            font-size: 2em;
        }

        .futuristic-input {
            font-size: 1em;
        }
    }

    @@media (max-width: 480px) {
        .futuristic-title {
            font-size: 1.8em;
        }

        .futuristic-input {
            font-size: 0.9em;
        }

        .btn-futuristic {
            font-size: 1em;
            padding: 10px;
        }
    }

    footer {
        background-color: transparent;
        text-align: center;
        padding: 10px 0;
        color: #ffffff;
        margin-top: auto; /* Ensures the footer is pushed to the bottom */
    }
</style>