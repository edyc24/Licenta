@model AJFIlfov.BusinessLogic.Implementation.MeciLiveService.Models.MeciLiveModel

<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        /* General styles */
        body {
            background: linear-gradient(135deg, #0f0c29, #302b63, #24243e);
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .container {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        .form-container {
            max-width: 600px;
            width: 100%;
            padding: 20px;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 20px;
        }

            .form-container h1 {
                text-align: center;
                font-size: 2.5em;
                color: #00e0ff;
                margin-bottom: 20px;
            }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                font-size: 1.2em;
                color: #00e0ff;
                margin-bottom: 10px;
                display: block;
            }

        .form-control {
            width: 100%;
            padding: 12px;
            font-size: 1.1em;
            border-radius: 10px;
            border: 1px solid #00e0ff;
            background-color: #24243e;
            color: #ffffff;
        }

            .form-control::placeholder {
                color: #999;
            }

        .btn {
            padding: 12px 20px;
            background-color: #00e0ff;
            color: white;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            font-size: 1.2em;
            transition: background-color 0.3s;
        }

        .btn-secondary {
            background-color: #6c757d;
        }

        .btn:hover {
            background-color: #ff4081;
        }

        /* Responsive styles */
        @@media (max-width: 768px) {
            .form-container h1 {
                font-size: 2em;
            }

            .form-control {
                font-size: 1em;
            }

            .btn {
                font-size: 1em;
            }
        }

        @@media (max-width: 480px) {
            .form-container h1 {
                font-size: 1.8em;
            }

            .form-control {
                font-size: 0.9em;
            }

            .btn {
                font-size: 0.9em;
                padding: 10px;
            }
        }

        footer {
            background-color: transparent;
            text-align: center;
            padding: 10px 0;
            color: #ffffff;
            margin-top: auto; /* Ensures the footer is pushed to the bottom */
        }
    </style>
</head>
<body>

    <!-- Container principal -->
    <div class="container">
        <div class="form-container">
            <h1>Adaugă Meci Nou</h1>
            <form asp-action="CreateMatch" method="post">
                <div class="form-group">
                    <label asp-for="EchipaGazda"></label>
                    <input asp-for="EchipaGazda" class="form-control" />
                    <span asp-validation-for="EchipaGazda" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EchipaOaspete"></label>
                    <input asp-for="EchipaOaspete" class="form-control" />
                    <span asp-validation-for="EchipaOaspete" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DataOra"></label>
                    <input asp-for="DataOra" class="form-control" type="datetime-local" />
                    <span asp-validation-for="DataOra" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Status"></label>
                    <select asp-for="Status" class="form-control">
                        <option value="Programat">Programat</option>
                        <option value="InDesfasurare">În Desfășurare</option>
                        <option value="Finalizat">Finalizat</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <div class="form-group" style="text-align: center;">
                    <button type="submit" class="btn">Salvează</button>
                    <a asp-action="Index" class="btn btn-secondary">Înapoi</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Script pentru toggle meniu -->
    <script>
        function toggleMenu() {
            const menu = document.getElementById("menu");
            menu.classList.toggle("show");
        }
    </script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>