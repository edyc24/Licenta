@model AJFIlfov.BusinessLogic.Implementation.MeciLiveService.Models.MeciLiveModel

<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background-image: none;
            background: linear-gradient(135deg, #0f0c29, #302b63, #24243e);
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .create-match-container {
            padding: 2rem;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(0.6rem);
            border-radius: var(--radius-huge);
        }

        .document-form .match-group {
            margin-bottom: 2rem;
            margin-left: auto;
            margin-right: auto;
        }

        .match-label {
            font-size: 1.2rem;
            color: #00e0ff;
            margin-bottom: 0.6rem;
            display: inline-block;
            font-weight: bold;
        }

        .match-input {
            width: 100%;
            padding: 0.7rem;
            font-size: 1.1rem;
            border-radius: 0.6rem;
            border: 1px solid #00e0ff;
            background-color: #24243e;
            color: #ffffff;
        }

            .match-input::placeholder {
                color: #999999;
            }

        select.match-input {
            -webkit-appearance: none;
            -moz-appearance: none;
            appearance: none;
            background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='%2300e0ff'%3e%3cpath d='M7 10l5 5 5-5z'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right 0.7rem center;
            background-size: 1.5rem;
            padding-right: 2.5rem;
        }

            select.match-input::-ms-expand {
                display: none;
            }

        .match-button {
            width: 80%;
            padding: 1rem;
            color: #ffffff;
            font-weight: bold;
            font-size: 1.2rem;
            border: none;
            cursor: pointer;
            display: block;
            margin: 1.1rem auto;
            background-color: rgba(255, 255, 255, 0.1);
            transition: background-color 0.3s, color 0.3s;
            border-radius: var(--radius-big);
        }

            .match-button:hover {
                background-color: #ff4081;
                color: #ffffff;
            }

        .match-button-secondary {
            background-color: #6c757d;
        }

        @@media (max-width: 480px) {
            .match-input {
                font-size: 0.9rem;
            }

            .match-button {
                font-size: 1rem;
                padding: 0.6rem;
            }
        }

        footer {
            margin-top: auto;
        }
    </style>
</head>

<body>
    <h2 class="page-title-alt">Adaugă un meci nou</h2>

    <div class="create-match-container">
        <form asp-action="CreateMatch" method="post" class="document-form">
            <div class="match-group">
                <label asp-for="EchipaGazda" class="match-label">Echipă gazdă</label>
                <input asp-for="EchipaGazda" class="match-input" />
                <span asp-validation-for="EchipaGazda" class="text-danger"></span>
            </div>
            <div class="match-group">
                <label asp-for="EchipaOaspete" class="match-label">Echipă oaspete</label>
                <input asp-for="EchipaOaspete" class="match-input" />
                <span asp-validation-for="EchipaOaspete" class="text-danger"></span>
            </div>
            <div class="match-group">
                <label asp-for="DataOra" class="match-label">Data și ora</label>
                <input asp-for="DataOra" class="match-input" type="datetime-local" />
                <span asp-validation-for="DataOra" class="text-danger"></span>
            </div>
            <div class="match-group">
                <label asp-for="Status" class="match-label">Status</label>
                <select asp-for="Status" class="match-input">
                    <option value="Programat">Programat</option>
                    <option value="InDesfasurare">În desfășurare</option>
                    <option value="Finalizat">Finalizat</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="match-group" style="text-align: center;">
                <button type="submit" class="match-button">Salvează</button>
                <a asp-action="Index" class="match-button match-button-secondary">Înapoi</a>
            </div>
        </form>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>