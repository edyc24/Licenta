<h2 class="admin-title">Admin Dashboard</h2>
<p class="welcome-message">Bine ai venit, @User.Identity.Name!</p>

<ul class="admin-menu">
    <li><a asp-action="Audit" class="admin-link">Inspectează audit</a></li>
    <li><a asp-action="CreateAnunt" class="admin-link">Creează anunț</a></li>
    <li><a asp-action="CreateMatch" class="admin-link">Creează meci</a></li>
    <li><a asp-action="MeciuriLive" class="admin-link">Listă meciuri live</a></li>
    <li><a asp-action="Logout" class="admin-link admin-link-secondary">Logout</a></li>
</ul>

<style>
    body {
        background-image: none;
        background: linear-gradient(135deg, #0f0c29, #302b63, #24243e);
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    .admin-title {
        text-align: center;
        font-size: 2.5rem;
        color: #00e0ff;
        margin-top: 2.5rem;
    }

    .welcome-message {
        text-align: center;
        font-size: 1.5rem;
        color: #ffffff;
        margin-bottom: 2.5rem;
    }

    .admin-menu {
        list-style-type: none;
        padding: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 2rem;
    }

    .admin-link {
        width: 16rem;
        padding: 1rem;
        color: #ffffff;
        font-weight: bold;
        font-size: 1.2rem;
        border: none;
        cursor: pointer;
        display: block;
        background-color: rgba(255, 255, 255, 0.1);
        transition: background-color 0.3s, color 0.3s;
        border-radius: var(--radius-big);
        text-align: center;
    }

        .admin-link:hover {
            background-color: #ff4081;
            color: #ffffff;
        }

    .admin-link-secondary {
        background-color: #6c757d;
    }

    footer {
        margin-top: auto;
    }

    @@media (max-width: 480px) {
        .admin-title {
            font-size: 1.8rem;
        }

        .welcome-message {
            font-size: 1rem;
        }

        .admin-link {
            font-size: 1em;
        }
    }
</style>