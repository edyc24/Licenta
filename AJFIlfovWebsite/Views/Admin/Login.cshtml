@model AJFIlfov.BusinessLogic.Implementation.Account.LoginModel

@{
    ViewData["Title"] = "Autentificare";
}

<div class="login-page">
    <div class="login-container">
        <div class="login-card">
            <h2 class="futuristic-title text-center">Autentificare</h2>
            @if (Model.AreCredentialsInvalid)
            {
                <div class="alert alert-danger text-center">
                    Credențiale invalide
                </div>
            }

            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Email" class="futuristic-label">Email</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                        </div>
                        <input asp-for="Email" class="futuristic-input" placeholder="Introduceți adresa de email" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="futuristic-label">Parolă</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        </div>
                        <input asp-for="Password" type="password" class="futuristic-input" placeholder="Introduceți parola" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Autentificare" class="btn-futuristic" />
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .login-page {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background: linear-gradient(135deg, #0f0c29, #302b63, #24243e);
    }

    .login-container {
        width: 100%;
        max-width: 400px;
        padding: 20px;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border-radius: 20px;
    }

    .futuristic-title {
        font-size: 2.5em;
        color: #00e0ff;
        margin-bottom: 20px;
    }

    .futuristic-label {
        font-size: 1.2em;
        color: #00e0ff;
        margin-bottom: 10px;
        display: block;
    }

    .futuristic-input {
        width: 100%;
        padding: 12px;
        font-size: 1.1em;
        border-radius: 10px;
        border: 1px solid #00e0ff;
        background-color: #24243e;
        color: #ffffff;
    }

        .futuristic-input::placeholder {
            color: #999;
        }

    .btn-futuristic {
        width: 100%;
        padding: 12px;
        background-color: #00e0ff;
        color: #ffffff;
        font-weight: 600;
        font-size: 1.2em;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-futuristic:hover {
            background-color: #ff4081;
        }

    .alert {
        background-color: rgba(255, 0, 0, 0.1);
        color: #ff4081;
        border-radius: 10px;
        padding: 10px;
        margin-bottom: 20px;
    }
</style>