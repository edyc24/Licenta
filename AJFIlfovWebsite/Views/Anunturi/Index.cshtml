@model IEnumerable<AJFIlfov.BusinessLogic.Implementation.Anunturi.Models.AnuntModel>

<div class="announcements-container">
    <h1>Anunțuri</h1>

    <!-- Filter Section -->
    <div class="filter-section">
        <label for="sectionFilter">Filtrează după secțiune:</label>
        <select id="sectionFilter" class="form-control" onchange="filterAnnouncements()">
            <option value="all">Toate secțiunile</option>
            <option value="Informatii">Informații</option>
            <option value="Competitii">Competiții</option>
            <option value="Comisii">Comisii</option>
        </select>
    </div>

    <!-- Announcements List -->
    <div id="announcementsList">
        @foreach (var anunt in Model)
        {
            <div class="announcement-card" data-section="@anunt.TipAnunt">
                <h3>@anunt.Titlu</h3>
                <p class="announcement-section">@anunt.TipAnunt</p>
                <p>@anunt.Continut.Substring(0, Math.Min(anunt.Continut.Length, 150))...</p>
                @if (anunt.Imagine != null)
                {
                    <img src="data:image;base64,@(Convert.ToBase64String(anunt.Imagine))" class="img-fluid announcement-image" alt="Imagine anunț" />
                }
                <span class="announcement-date">Data: @anunt.DataPublicarii.ToString("dd MMM yyyy")</span>
                <a href="/Anunturi/Detalii/@anunt.Id" class="btn btn-primary">Citește mai mult</a>
            </div>
        }
    </div>
</div>

<style>
    /* Filter section styling */
    .filter-section {
        margin-bottom: 20px;
        text-align: center;
    }

        .filter-section label {
            font-size: 1.1em;
            font-weight: 500;
            color: #007acc;
            margin-right: 10px;
        }

        .filter-section select {
            padding: 8px;
            font-size: 1em;
            border-radius: 5px;
            border: 1px solid #cccccc;
        }

    /* Announcement cards and styling as before */
    .announcements-container {
        max-width: 800px;
        margin: 40px auto;
        padding: 20px;
        background-color: #f8fafc;
    }

        .announcements-container h1 {
            text-align: center;
            font-size: 2em;
            color: #007acc;
            margin-bottom: 30px;
            font-weight: 600;
        }

    .announcement-card {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-left: 4px solid #007acc;
        margin-bottom: 20px;
    }

        .announcement-card h3 {
            color: #005fa3;
            font-size: 1.5em;
            font-weight: 600;
            margin-bottom: 10px;
        }

    .announcement-section {
        font-size: 1em;
        color: #333;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .announcement-card p {
        font-size: 1.1em;
        line-height: 1.6;
        color: #666;
        margin-bottom: 15px;
    }

    .announcement-image {
        width: 100%;
        max-height: 200px;
        object-fit: cover;
        border-radius: 5px;
        margin-bottom: 15px;
    }

    .announcement-date {
        font-size: 0.9em;
        color: #999;
        display: block;
        margin-bottom: 15px;
    }

    .btn-primary {
        background-color: #007acc;
        color: #ffffff;
        text-decoration: none;
        padding: 10px 15px;
        border-radius: 5px;
        font-weight: 600;
        font-size: 1em;
    }

        .btn-primary:hover {
            background-color: #005fa3;
        }
</style>

<script>
    function filterAnnouncements() {
        const filter = document.getElementById('sectionFilter').value;
        const announcements = document.querySelectorAll('.announcement-card');

        announcements.forEach(card => {
            const section = card.getAttribute('data-section');
            if (filter === 'all' || filter === section) {
                card.style.display = 'block';
            } else {
                card.style.display = 'none';
            }
        });
    }
</script>
