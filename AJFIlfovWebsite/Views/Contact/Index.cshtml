@{
    ViewData["Title"] = "Contact";
}

<div class="contact-container">
    <h1>Contact</h1>
    <p><strong>Asociația Județeană de Fotbal Ilfov</strong></p>
    <p>Adresa: Strada Doctor Thoma Ionescu nr.9, Sector 5, Bucuresti</p>
    <p>Telefon: +40729149449</p>
    <p>Email: <a href="mailto:contact@ajfilfov.ro">ajf.ilfov@frf.ro</a></p>

    <h2>Contactează-ne</h2>
    <form class="contact-form">
        <div class="form-group">
            <label for="Nume">Nume</label>
            <input type="text" class="form-control" id="Nume" placeholder="Introdu numele tău">
        </div>

        <div class="form-group">
            <label for="Email">Email</label>
            <input type="email" class="form-control" id="Email" placeholder="Introdu adresa de email">
        </div>

        <div class="form-group">
            <label for="Mesaj">Mesaj</label>
            <textarea class="form-control large-textarea" id="Mesaj" placeholder="Scrie mesajul tău"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Trimite</button>
    </form>
</div>

<style>
    /* Container styling */
    .contact-container {
        max-width: 800px;
        margin: 60px auto;
        padding: 30px;
        background-color: #f8fafc;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .contact-container h1 {
        font-size: 2em;
        color: #007acc;
        margin-bottom: 20px;
    }

    .contact-container p {
        font-size: 1.1em;
        color: #333;
        margin-bottom: 10px;
    }

    .contact-container a {
        color: #007acc;
        text-decoration: none;
    }

    /* Form styling */
    .contact-form .form-group {
        margin-bottom: 20px;
        text-align: left;
    }

    .contact-form label {
        font-size: 1.1em;
        font-weight: 500;
        color: #005fa3;
        margin-bottom: 8px;
        display: inline-block;
    }

    .contact-form .form-control {
        padding: 12px;
        font-size: 1em;
        border-radius: 5px;
        border: 1px solid #cccccc;
        width: 100%;
    }

    .contact-form .form-control::placeholder {
        color: #999;
    }

    /* Larger textarea for message */
    .large-textarea {
        height: 200px;
        padding: 15px;
    }

    /* Button styling */
    .contact-form .btn-primary {
        width: 100%;
        padding: 12px;
        background-color: #007acc;
        color: #ffffff;
        font-weight: 600;
        font-size: 1.1em;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    .contact-form .btn-primary:hover {
        background-color: #005fa3;
    }
</style>
