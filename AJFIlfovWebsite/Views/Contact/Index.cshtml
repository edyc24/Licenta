@{
    ViewData["Title"] = "Contact";
}

<h2 class="page-title">@ViewData["Title"]</h2>

<div class="contact-container">
    <div class="contact-info">
        <h3>Asociația Județeană de Fotbal Ilfov</h3>
        <p>Strada Doctor Thoma Ionescu nr.9, Sector 5, Bucuresti</p>
        <p>+40729149449</p>
        <p><a href="mailto:ajf.ilfov@frf.ro">ajf.ilfov@frf.ro</a></p>
    </div>

    <div class="contact-form-container">
        <form class="contact-form">
            <div class="form-group">
                <label for="Nume" class="form-label">Nume</label>
                <input type="text" class="form-input" id="Nume" placeholder="Introdu numele tău">
            </div>

            <div class="form-group">
                <label for="Email" class="form-label">Email</label>
                <input type="email" class="form-input" id="Email" placeholder="Introdu adresa de email">
            </div>

            <div class="form-group">
                <label for="Mesaj" class="form-label">Mesaj</label>
                <textarea class="form-input large-textarea" id="Mesaj" placeholder="Scrie mesajul tău"></textarea>
            </div>

            <button type="submit" class="submit-button">Trimite</button>
        </form>
    </div>
</div>

<style>
    .contact-container {
        padding: 2rem 1.2rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2rem;
    }

    .contact-info {
        text-align: center;
        color: var(--color-on-surface);
    }

    .contact-info h3 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
        font-weight: bold;
    }

    .contact-info p {
        margin-bottom: 0.5rem;
    }

    .contact-info a {
        color: var(--color-secondary);
        text-decoration: none;
        transition: color 0.3s;
    }

    .contact-info a:hover {
        color: var(--color-primary);
    }

    .contact-form-container {
        width: 100%;
        max-width: 800px;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        display: block;
        color: var(--color-on-surface);
        font-weight: bold;
        margin-bottom: 0.5rem;
    }

    .form-input {
        width: 100%;
        padding: 0.8rem;
        border: 1px solid var(--color-on-surface);
        border-radius: var(--radius-small);
        background-color: var(--color-surface);
        color: var(--color-on-surface);
        font-size: 1rem;
        transition: border-color 0.3s;
    }

    .form-input:focus {
        outline: none;
        border-color: var(--color-secondary);
    }

    .large-textarea {
        height: 200px;
        resize: vertical;
    }

    .submit-button {
        width: 100%;
        padding: 1rem;
        background-color: var(--color-secondary);
        color: var(--color-on-secondary);
        border: none;
        border-radius: var(--radius-small);
        font-size: 1.1rem;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .submit-button:hover {
        background-color: var(--color-primary);
    }

    @@media (min-width: 600px) {
        .contact-container {
            padding: 2rem 2.8rem;
        }
    }

    @@media (min-width: 768px) {
        .contact-container {
            padding: 2rem 3rem;
        }
    }

    @@media (min-width: 1068px) {
        .contact-container {
            padding: 2rem 3.3rem;
            margin-bottom: 2rem;
        }
    }

    @@media (min-width: 1280px) {
        .contact-container {
            padding: 2rem 5rem;
            margin-bottom: 4rem;
        }
    }
</style>
