<style>
    body {
        background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
    }

    h1, h2 {
        text-align: center;
        margin-bottom: 20px;
    }

    p {
        font-size: 1.2em;
        line-height: 1.6;
        text-align: center;
    }

    .about-container {
        border-radius: 20px;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        margin: 60px 80px;
        padding: 20px;
    }

    /* futuristic cards */
    .futuristic-card {
        border-radius: 15px;
        padding: 30px;
        margin: 20px 0;
        color: var(--color-on-primary);
    }

        .futuristic-card h2 {
            font-size: 2.5em;
            color: #00e0ff;
            position: relative;
            margin-bottom: 15px;
        }

            .futuristic-card h2::after {
                content: '';
                display: block;
                width: 80px;
                height: 3px;
                background: #00e0ff;
                margin: 0 auto;
            }

    /* header section */
    header {
        background: transparent;
    }

    /* showcase section */
    .showcase {
        position: relative;
        padding: 150px 20px;
        text-align: center;
        background: radial-gradient(circle at top, #1c1c1c, #111111);
        overflow: hidden;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
    }

        .showcase .content {
            z-index: 2;
            position: relative;
        }

        .showcase .title {
            font-size: 3.5em;
            font-weight: bold;
            text-transform: uppercase;
            background: linear-gradient(90deg, #f39c12, #e74c3c);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            animation: glow 2s infinite;
        }

        .showcase p {
            color: var(--color-on-primary);
        }

    @@keyframes glow {
        0%, 100% {
            text-shadow: 0 0 20px #f39c12, 0 0 30px #e74c3c;
        }

        50% {
            text-shadow: 0 0 30px #e74c3c, 0 0 50px #f39c12;
        }
    }

    /* glowing buttons */
    .btn-glow {
        display: inline-block;
        padding: 10px 20px;
        color: #fff;
        text-decoration: none;
        border-radius: 25px;
        background: linear-gradient(90deg, #f39c12, #e74c3c);
        box-shadow: 0 0 20px rgba(255, 100, 100, 0.6);
        text-transform: uppercase;
        font-weight: bold;
        transition: 0.3s;
    }

        .btn-glow:hover {
            background: linear-gradient(90deg, #e74c3c, #f39c12);
            box-shadow: 0 0 30px rgba(255, 100, 100, 0.8);
        }

    /* mission, values and story sections */
    #misiune,
    #valori,
    #poveste {
        margin-top: 60px;
        margin-bottom: 60px;
        padding: 0 160px;
        text-align: center;
        font-size: 1.2em;
    }

        #valori ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

    /* team section */
    #echipa {
        padding: 0 20px;
        margin-top: 60px;
        margin-bottom: 60px;
    }

    .team {
        display: flex;
        justify-content: space-around;
        flex-wrap: wrap;
        gap: 20px;
    }

    .team-member {
        text-align: center;
        padding: 10px;
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: 7px;
        background: rgba(0, 0, 0, 0.5);
        width: 25%;
    }

        .team-member img {
            border-radius: 50%;
            width: 100px;
            height: 100px;
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
            margin-bottom: 10px;
            -o-object-fit: cover;
            object-fit: cover;
            object-position: center bottom;
        }

        .team-member h3 {
            font-size: 1.5em;
            color: #00e0ff;
        }

    /* locations section */
    #locatii {
        margin-top: 60px;
        margin-bottom: 60px;
    }

    /* contact section */
    #contact {
        margin-top: 60px;
    }

    /* footer */
    footer {
        background-color: transparent;
    }

    /* mobile devices responsiveness */
    @@media (max-width: 768px) {
        .about-container {
            margin: 20px;
            padding: 10px;
        }

        .showcase {
            padding: 100px 10px;
        }

            .showcase .title {
                font-size: 2.5em;
            }

        .futuristic-card h2 {
            font-size: 2em;
        }

        p {
            font-size: 1em;
        }

        .team-member {
            width: 100%;
        }
    }

    @@media (max-width: 480px) {
        .showcase .title {
            font-size: 1.8em;
        }

        .btn-glow {
            padding: 8px 15px;
            font-size: 0.9em;
        }

        h1, h2 {
            margin-bottom: 15px;
        }

        .futuristic-card {
            padding: 20px;
            margin: 15px 0;
        }

        #misiune,
        #valori,
        #poveste {
            padding: 0 20px;
        }
    }
</style>
