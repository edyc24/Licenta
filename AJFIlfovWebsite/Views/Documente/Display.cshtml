@model AJFIlfov.BusinessLogic.Implementation.Documente.Models.DocumentModel

<h1 class="futuristic-title">@Model.NumeDocument</h1>
<div class="futuristic-display">
    <iframe src="@Url.Action("Download", new { id = Model.Id })" width="100%" height="600px" frameborder="0"></iframe>
</div>
<a href="@Url.Action("Download", new { id = Model.Id })" class="futuristic-download-btn">Descarcă PDF</a>

<style>
    .futuristic-display {
        text-align: center;
        padding: 20px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 10px;
        margin: 20px auto;
        max-width: 800px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }

    .futuristic-download-btn {
        display: block;
        text-align: center;
        margin: 20px auto;
        padding: 10px 20px;
        color: #fff;
        background: #00e0ff;
        border-radius: 5px;
        text-decoration: none;
        width: max-content;
    }

    .futuristic-download-btn:hover {
        background: #005fa3;
    }
</style>