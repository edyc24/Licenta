@{
    ViewData["Title"] = "Documente";
    var documente = ViewBag.Documente as List<AJFIlfov.BusinessLogic.Implementation.Documente.Models.DocumentModel>;
}

<h2 class="page-title">@ViewData["Title"]</h2>

<div class="documents-container">
    <div class="document-filter">
        <label for="documentSelect" class="filter-label">Selectați un document:</label>
        <select id="documentSelect" class="filter-select" onchange="showDocument(this.value)">
            <option value="">-- Alegeți un document --</option>
            @foreach (var doc in documente)
            {
                <option value="@doc.Id" data-url="@Url.Action("Download", new { id = doc.Id })">
                    @doc.NumeDocument
                </option>
            }
        </select>
    </div>

    <div id="documentDisplay" class="document-display">
        <p>Vă rugăm să selectați un document pentru a-l vizualiza.</p>
    </div>
</div>

<style>
    html,
    body,
    .body-filter {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    .documents-container {
        padding: 2rem 1.2rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2rem;
    }

    .document-filter {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
        width: 100%;
        max-width: 800px;
    }

    .filter-label {
        color: var(--color-on-surface);
        font-weight: bold;
        font-size: 1.1rem;
        text-align: center;
    }

    .filter-select {
        width: 100%;
        max-width: 300px;
        padding: 0.8rem;
        font-size: 1rem;
        border: 1px solid var(--color-on-surface);
        border-radius: var(--radius-small);
        background-color: var(--color-surface);
        color: var(--color-on-surface);
        transition: border-color 0.3s;
    }

    .filter-select:focus {
        outline: none;
        border-color: var(--color-secondary);
    }

    .document-display {
        width: 100%;
        max-width: 800px;
        text-align: center;
        color: var(--color-on-surface);
    }

    .document-display iframe {
        width: 100%;
        height: 80vh;
        border: none;
        border-radius: var(--radius-big);
        background-color: var(--color-surface);
    }

    .download-button {
        display: inline-block;
        padding: 1rem 2rem;
        margin-top: 1rem;
        background-color: var(--color-secondary);
        color: var(--color-on-secondary);
        text-decoration: none;
        border-radius: var(--radius-small);
        font-weight: bold;
        transition: background-color 0.3s;
    }

    .download-button:hover {
        background-color: var(--color-primary);
    }

    footer {
        margin-top: auto;
    }

    @@media (min-width: 600px) {
        .documents-container {
            padding: 2rem 2.8rem;
        }
    }

    @@media (min-width: 768px) {
        .documents-container {
            padding: 2rem 3rem;
        }

        .document-filter {
            flex-direction: column;
            justify-content: center;
        }

        .filter-select {
            width: 300px;
        }
    }

    @@media (min-width: 1068px) {
        .documents-container {
            padding: 2rem 3.3rem;
            margin-bottom: 2rem;
        }
    }

    @@media (min-width: 1280px) {
        .documents-container {
            padding: 2rem 5rem;
            margin-bottom: 4rem;
        }
    }
</style>

<script>
    function showDocument(id) {
        const select = document.getElementById('documentSelect');
        const selectedOption = select.options[select.selectedIndex];
        const url = selectedOption.getAttribute('data-url');

        if (url) {
            const displayContainer = document.getElementById('documentDisplay');
            displayContainer.innerHTML = `
                <iframe src="${url}" width="100%" height="600px" frameborder="0"></iframe>
                <a href="${url}" class="download-button">Descarcă PDF</a>
            `;
        } else {
            const displayContainer = document.getElementById('documentDisplay');
            displayContainer.innerHTML = `<p>Vă rugăm să selectați un document pentru a-l vizualiza.</p>`;
        }
    }
</script>