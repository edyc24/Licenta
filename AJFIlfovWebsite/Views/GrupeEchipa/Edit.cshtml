@model AJFIlfov.BusinessLogic.Implementation.GrupeEchipaService.Models.GrupaEchipaModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/GrupeEchipa/Edit.css"/>
    <link rel="stylesheet" href="~/css/Common/Common.css" />
</head>
<style>
    html,
    body {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }
</style>
<body>

<h2 class="page-title">@ViewData["Title"]</h2>

<div class="grupe-echipa-edit-container">
    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label asp-for="IdGrupa" class="control-label">Grupa</label>
            <select asp-for="IdGrupa" class="form-control" asp-items="@(new SelectList(ViewBag.Grupe, "IdGrupa", "Nume"))">
                <option value="">-- Select Grupa --</option>
            </select>
            <span asp-validation-for="IdGrupa" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IdEchipa" class="control-label">Echipa</label>
            <select asp-for="IdEchipa" class="form-control" asp-items="@(new SelectList(ViewBag.Echipe, "IdEchipa", "Nume"))">
                <option value="">-- Select Echipa --</option>
            </select>
            <span asp-validation-for="IdEchipa" class="text-danger"></span>
        </div>

        <input type="hidden" asp-for="IdGrupaEchipa"/>

        <div class="form-actions">
            <input type="submit" value="Save" class="btn btn-primary"/>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

</body>
</html>