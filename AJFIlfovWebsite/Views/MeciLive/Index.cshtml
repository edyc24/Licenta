@model IEnumerable<AJFIlfov.BusinessLogic.Implementation.MeciLiveService.Models.MeciLiveModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Meciuri Live";
}

<h2 class="page-title">@ViewData["Title"]</h2>

<div class="matches-container">
    <div class="table-container">
        <table class="live-matches-table">
            <thead>
                <tr>
                    <th>Meci</th>
                    <th>Scor</th>
                    <th>Minut</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var meci in Model)
                {
                    <tr>
                        <td>@meci.EchipaGazda vs @meci.EchipaOaspete</td>
                        <td>@meci.ScorGazda - @meci.ScorOaspete</td>
                        <td>
                            @if (meci.Status == "Pauza")
                            {
                                <span class="status-badge status-pause">Pauză</span>
                            }
                            else if (meci.Status == "Finalizat")
                            {
                                <span class="status-badge status-final">Final</span>
                            }
                            else if (meci.Status == "InDesfasurare")
                            {
                                <span class="status-badge status-live">@(meci.Minut ?? 0)'</span>
                            }
                            else
                            {
                                <span class="status-badge">-</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    html,
    body,
    .body-filter {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    .matches-container {
        padding: 2rem 1.2rem;
    }

    .table-container {
        overflow-x: auto;
        margin: 0;
    }

    .live-matches-table {
        width: 100%;
        border-collapse: collapse;
        background-color: var(--color-surface);
        border-radius: var(--radius-big);
        overflow: hidden;
    }

    .live-matches-table thead th {
        background-color: var(--color-secondary);
        color: var(--color-on-secondary);
        padding: 1rem;
        text-align: left;
        font-weight: bold;
    }

    .live-matches-table tbody tr {
        border-bottom: 1px solid var(--color-on-surface);
    }

    .live-matches-table tbody tr:last-child {
        border-bottom: none;
    }

    .live-matches-table td {
        padding: 1rem;
        color: var(--color-on-surface);
    }

    .live-matches-table tbody tr:hover {
        background-color: var(--color-surface-variant);
    }

    .status-badge {
        display: inline-block;
        padding: 0.3rem 0.8rem;
        border-radius: var(--radius-small);
        font-weight: bold;
        font-size: 0.9rem;
    }

    .status-pause {
        background-color: var(--color-warning);
        color: var(--color-on-warning);
    }

    .status-final {
        background-color: var(--color-error);
        color: var(--color-on-error);
    }

    .status-live {
        background-color: var(--color-success);
        color: var(--color-on-success);
    }

    footer {
        margin-top: auto;
    }

    @@media (min-width: 600px) {
        .matches-container {
            padding: 2rem 2.8rem;
        }
    }

    @@media (min-width: 768px) {
        .matches-container {
            padding: 2rem 3rem;
        }

        .live-matches-table {
            font-size: 1.1rem;
        }
    }

    @@media (min-width: 1068px) {
        .matches-container {
            padding: 2rem 3.3rem;
            margin-bottom: 2rem;
        }
    }

    @@media (min-width: 1280px) {
        .matches-container {
            padding: 2rem 5rem;
            margin-bottom: 4rem;
        }
    }
</style>

@section Scripts {
    <script>
        setTimeout(function () {
            location.reload();
        }, 60000);
    </script>
}
