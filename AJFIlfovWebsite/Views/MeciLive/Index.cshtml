@model IEnumerable<AJFIlfov.BusinessLogic.Implementation.MeciLiveService.Models.MeciLiveModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Meciuri Live";
}

<div class="matches-container my-5">
    <h1 class="text-center mb-4">Meciuri Live</h1>

    <table class="admin-table">
        <thead>
            <tr>
                <th>Meci</th>
                <th>Scor</th>
                <th>Minut</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var meci in Model)
            {
                <tr>
                    <td>@meci.EchipaGazda vs @meci.EchipaOaspete</td>
                    <td>@meci.ScorGazda - @meci.ScorOaspete</td>
                    <td>
                        @if (meci.Status == "Pauza")
                        {
                            <span class="badge badge-warning">Pauză</span>
                        }
                        else if (meci.Status == "Finalizat")
                        {
                            <span class="badge badge-danger">Final</span>
                        }
                        else if (meci.Status == "InDesfasurare")
                        {
                            <span>@(meci.Minut ?? 0)'</span>
                        }
                        else
                        {
                            <span>-</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Styles {
    <style>
        .matches-container {
            border-radius: 20px;
            background: rgba(255, 255, 255, 0.1);
            margin: 60px 80px;
            padding: 20px;
            background-color: #f8fafc;
        }

            .matches-container h1 {
                text-align: center;
                font-size: 2em;
                color: #007acc;
                margin-bottom: 30px;
                font-weight: 600;
            }

        .admin-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            border-collapse: separate;
            border-spacing: 0;
            border-radius: 20px;
            overflow: hidden;
            border: 1px solid #ddd;
        }

            .admin-table th, .admin-table td {
                padding: 10px;
                border: 1px solid #ddd;
                text-align: center;
            }

            .admin-table th {
                background-color: #007acc;
                color: white;
            }

        th, td {
            padding: 10px;
            background-color: #f0f0f0;
            border-bottom: 1px solid #ddd;
        }

        th {
            border-top: 1px solid #ddd;
        }

        .form-inline {
            display: inline-block;
            margin: 2px;
        }

            .form-inline button {
                padding: 6px 10px;
                font-size: 0.9em;
            }

        .btn-sm {
            padding: 5px 10px;
            font-size: 0.9em;
        }
    </style>
}

@section Scripts {
    <script>
        function toggleMenu() {
            const menu = document.getElementById("menu");
            menu.classList.toggle("show");
        }

        // refresh page every 60 seconds to update minute
        setTimeout(function () {
            location.reload();
        }, 60000);
    </script>
}
