@model IEnumerable<QnA.Models.QuestionModel>

<div class="announcement-details-container">
    <h2>Questions</h2>
    <form method="get" asp-action="Index">
        <input type="text" name="searchText" placeholder="Search questions..." value="@ViewData["searchText"]" />
        <button type="submit">Search</button>
    </form>
    <ul>
        @foreach (var question in Model)
        {
            <li>
                <a asp-action="Details" asp-route-id="@question.Id">@question.Title</a>
                <p>@question.Content</p>
            </li>
        }
    </ul>

    <h2>Ask a Question</h2>
    <form method="post" asp-action="AddQuestion">
        <input type="text" name="title" placeholder="Question title" required />
        <textarea name="content" placeholder="Question content" required></textarea>
        <button type="submit">Submit Question</button>
    </form>
</div>

<style>
    .announcement-details-container {
        width: 80%;
        max-width: 1000px;
        margin: 40px auto;
        padding: 20px;
        background-color: #f8fafc;
        border-radius: 8px;
    }

        .announcement-details-container h2 {
            font-size: 2.5em;
            color: #007acc;
            margin-bottom: 20px;
        }

        .announcement-details-container form {
            margin-bottom: 20px;
        }

        .announcement-details-container input[type="text"] {
            width: calc(100% - 120px);
            padding: 10px;
            margin-right: 10px;
            border-radius: 4px;
            border: 1px solid #ccc;
        }

        .announcement-details-container button {
            padding: 10px 20px;
            border-radius: 4px;
            background-color: #007acc;
            color: white;
            border: none;
            cursor: pointer;
        }

        .announcement-details-container ul {
            list-style-type: none;
            padding-left: 0;
        }

        .announcement-details-container li {
            margin-bottom: 20px;
        }

        .announcement-details-container a {
            font-size: 1.5em;
            color: #007acc;
            text-decoration: none;
        }

        .announcement-details-container p {
            font-size: 1.2em;
            color: #333;
        }

    textarea {
        width: 100%;
        height: 100px;
        padding: 10px;
        border-radius: 4px;
        border: 1px solid #ccc;
        margin-bottom: 10px;
    }

    button:hover {
        background-color: #005fa3;
    }
</style>