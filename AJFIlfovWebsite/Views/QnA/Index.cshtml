@model IEnumerable<QnA.Models.QuestionModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/Common/Common.css" />
    <link rel="stylesheet" href="~/css/QnA/Index.css" />
</head>
<body>
    <h2 class="page-title">Întrebări și Răspunsuri</h2>

    <div class="qna-container">
        <form method="get" asp-action="Index" class="search-form">
            <input type="text" name="searchText" class="search-input" placeholder="Caută întrebări..." value="@ViewData["searchText"]" />
            <button type="submit" class="search-button">Caută</button>
        </form>

        <ul class="questions-list">
            @foreach (var question in Model)
            {
                <li class="question-item">
                    <div class="question-meta">
                        <span><label>Întrebat de:</label> <strong>@question.UserName</strong></span>
                        <span><label>Data:</label> <strong>@question.CreatedAt.ToString("dd MMMM yyyy")</strong></span>
                        <span><label>Răspunsuri:</label> <strong>@question.Answers.Count</strong></span>
                    </div>
                    <a asp-action="Details" asp-route-id="@question.Id" class="question-link">@question.Title</a>
                    <p class="question-content">@question.Content</p>
                </li>
            }
        </ul>

        <div class="question-form">
            <h2>Răspunsul tău</h2>
            <form method="post" asp-action="AddQuestion">
                <div class="form-group">
                    <label class="form-label">Titlu</label>
                    <input type="text" name="title" class="form-input" placeholder="Titlul întrebării" required />
                </div>
                <div class="form-group">
                    <label class="form-label">Conținut</label>
                    <textarea name="content" class="form-input" placeholder="Conținutul întrebării" required></textarea>
                </div>
                <button type="submit" class="submit-button">Trimite întrebarea</button>
            </form>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>