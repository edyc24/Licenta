@model AJFIlfov.BusinessLogic.Implementation.StadioaneService.Models.StadionModel

@{
    ViewData["Title"] = "Editează Stadion";
}

<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/Stadioane/Edit.css" />
</head>
<body>

<div class="container">
    <h2>@ViewData["Title"]</h2>
    
    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="IdStadion" />

                <div class="form-group">
                    <label asp-for="Nume" class="control-label">Nume Stadion</label>
                    <input asp-for="Nume" class="form-control" />
                    <span asp-validation-for="Nume" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Salvează" class="btn btn-primary btn-lg" />
                    <a asp-action="Index" class="btn btn-secondary btn-lg">Anulează</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

</body>
</html>
