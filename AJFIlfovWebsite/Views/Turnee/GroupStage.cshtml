@{
    ViewData["Title"] = "Grupele campionatului";
}
@{
    Layout = null;
    var grupe = ViewBag.Grupe;
}
@using AJFIlfov.Common.DTOs
@using Microsoft.AspNetCore.Authorization
@inject CurrentUserDto CurrentUser
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Funnel+Display:wght@300..800&display=swap" rel="stylesheet">
    <!-- css styles -->
    <link rel="stylesheet" href="https://ajfilfovwebsite20241218232333.azurewebsites.net/css/Common/Common2.css">
    <link rel="stylesheet" href="https://ajfilfovwebsite20241218232333.azurewebsites.net/css/Turnee/Group.css">
    <style>
        html,
        body,
        .body-filter {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            position: relative;
        }

        .admin-edit-button {
            background-color: #00cbbc;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 0.8rem;
            transition: background-color 0.3s ease;
            margin-left: 10px;
            align-self: flex-start;
        }

        .admin-edit-button:hover {
            background-color: #00a89b;
        }

        .score-modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 1000;
        }

        .score-modal.show {
            display: block;
        }

        .modal-content {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            width: 300px;
            max-width: 90%;
            z-index: 1001;
        }

        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .modal-header h3 {
            margin: 0;
            color: #333;
        }

        .close-modal {
            background: none;
            border: none;
            font-size: 1.5rem;
            cursor: pointer;
            color: #666;
            padding: 0;
            position: absolute;
            right: 10px;
            top: 10px;
        }

        .score-inputs {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-bottom: 20px;
        }

        .score-input {
            width: 60px;
            padding: 5px;
            text-align: center;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        .score-team-names {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
            color: #333;
            gap: 10px;
        }

        .score-team-names span {
            flex: 1;
            text-align: center;
        }

        .save-score {
            width: 100%;
            padding: 10px;
            background-color: #00cbbc;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .save-score:hover {
            background-color: #00a89b;
        }

        @@media (max-width: 768px) {
            .match-teams {
                flex-direction: column;
                align-items: flex-start;
                gap: 0.25rem;
                position: relative;
                padding-right: 40px;
            }

            .admin-edit-button {
                position: absolute;
                right: 0;
                top: 50%;
                transform: translateY(-50%);
                margin: 0;
                padding: 8px;
                font-size: 0.75rem;
            }

            .score-team-names {
                flex-direction: column;
                text-align: center;
            }

            .score-team-names span {
                width: 100%;
            }

            .modal-content {
                margin: 0 15px;
            }
        }
    </style>
</head>

<body>
    <!-- filter over hexagon background to make it blurred and cool; it needs to wrap around the whole content so that its height matches it -->
    <div class="body-filter">

        <!-- header section -->
        <header>
            <div class="header-content">
                <div class="header-title">
                    <img src="https://ajfilfovwebsite20241218232333.azurewebsites.net/images/logo1.png" alt="Logo AJF Ilfov">
                    <h2>Asociația Județeană de Fotbal Ilfov</h2>
                    <h3>AJF Ilfov</h3>
                </div>

                <!-- menu toggle button (visible only on mobile) -->
                <div class="header-menu-toggle" onclick="toggleMenu()"></div>

                <!-- main navigation links for big screens -->
                <nav class="big-nav">
                    <a href="HomeWebsite">Acasă</a>
                    <a href="DespreNoi">Despre noi</a>
                    <a href="Anunturi">Comunicate</a>
                    <a href="Comisii">Comisii jurisdicționale</a>
                    <a href="Competitii">Competiții</a>
                    <a href="MeciLive">Meciuri live</a>
                    <a href="Documente">Documente</a>
                    <a href="Contact">Contact</a>
                </nav>
            </div>
        </header>

        <!-- ------------------------------------------------- -->
        <!-- page title -->
        <h1 class="page-title">Grupele campionatului - @ViewBag.Categorie</h1>

        <!-- actual page content -->
        <main class="group-stage">
            @* <a href="https://turnee.ajfilfov.ro/EliminationStage?categorie=@ViewBag.Categorie" class="elimination-link">Către faza eliminatorie</a> *@
            <a href="@Url.Action("EliminationStage", "Turnee", new { categorie = ViewBag.Categorie })" class="elimination-link">Către faza eliminatorie</a>

            <section class="group-content">
                @foreach (var grupa in ViewBag.Grupe)
                {
                    <article class="group">
                        <header class="group-header">
                            <h2>@grupa.Key</h2>
                        </header>
                        <table class="standings-table">
                            <thead>
                                <tr>
                                    <th>Pos</th>
                                    <th class="team-name">Echipa</th>
                                    <th>J</th>
                                    <th>V</th>
                                    <th>E</th>
                                    <th>Î</th>
                                    <th>GM</th>
                                    <th>GP</th>
                                    <th>P</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var position = 1;
                                    foreach (var team in grupa.Value)
                                    {
                                        <tr>
                                            <td>@position</td>
                                            <td class="team-name">@team.TeamName</td>
                                            <td>@team.MatchesPlayed</td>
                                            <td>@team.Wins</td>
                                            <td>@team.Draws</td>
                                            <td>@team.Losses</td>
                                            <td>@team.GoalsScored</td>
                                            <td>@team.GoalsConceded</td>
                                            <td>@team.Points</td>
                                        </tr>
                                        position++;
                                    }
                                }
                            </tbody>
                        </table>
                    </article>
                }
            </section>

            <section class="upcoming-matches">
                <h2>Meciuri viitoare</h2>
                <div class="matches-list">
                    @foreach (var match in ViewBag.UpcomingMatches)
                    {
                        <div class="match-item">
                            <div class="match-teams">
                                <span class="team">@match.EchipaGazdaNume</span>
                                <span class="vs">vs</span>
                                <span class="team">@match.EchipaOaspeteNume</span>
                                @if (CurrentUser.Role == "Administrator")
                                {
                                    <button class="admin-edit-button" onclick="openScoreModal('@match.IdTurneu', '@match.EchipaGazdaNume', '@match.EchipaOaspeteNume')">
                                        Editează scor
                                    </button>
                                }
                            </div>
                            <div class="match-details">
                                <span class="date">@match.Data?.ToString("dd.MM.yyyy HH:mm")</span>
                                <span class="stadium">@match.StadionNume</span>
                            </div>
                        </div>
                    }
                </div>
            </section>
        </main>

        <!-- Score Edit Modal -->
        <div id="scoreModal" class="score-modal">
            <div class="modal-content">
                <div class="modal-header">
                    <h3>Editare scor</h3>
                    <button class="close-modal" onclick="closeScoreModal()">&times;</button>
                </div>
                <div class="score-team-names">
                    <span id="homeTeamName"></span>
                    <span id="awayTeamName"></span>
                </div>
                <div class="score-inputs">
                    <input type="number" id="homeScore" class="score-input" min="0" value="0">
                    <span style="align-self: center">-</span>
                    <input type="number" id="awayScore" class="score-input" min="0" value="0">
                </div>
                <button class="save-score" onclick="saveScore()">Salvează</button>
            </div>
        </div>

        <!-- page footer -->
        <footer>
            <p>&copy; 2024 Asociația Județeană de Fotbal Ilfov. Toate drepturile rezervate.</p>
            <div class="social-icons">
                <a class="instagram" href="#"></a>
                <a class="facebook" href="https://www.facebook.com/AJFIlfov1997/?locale=ro_RO"></a>
                <a class="twitter" href="#"></a>
            </div>
        </footer>

    </div>

    <!-- main navigation links for small screens -->
    <nav class="small-nav">
        <div class="header-content">
            <div class="header-menu-toggle" onclick="toggleMenu()"></div>
        </div>

        <div class="small-nav-content">
            <a href="HomeWebsite">Acasă</a>
            <a href="DespreNoi">Despre noi</a>
            <a href="Anunturi">Comunicate</a>
            <a href="Comisii">Comisii jurisdicționale</a>
            <a href="Competitii">Competiții</a>
            <a href="MeciLive">Meciuri live</a>
            <a href="Documente">Documente</a>
            <a href="Contact">Contact</a>
        </div>
    </nav>

    <script>
        let currentMatchId = null;

        function openScoreModal(matchId, homeTeam, awayTeam) {
            currentMatchId = matchId;
            document.getElementById('homeTeamName').textContent = homeTeam;
            document.getElementById('awayTeamName').textContent = awayTeam;
            document.getElementById('scoreModal').classList.add('show');
        }

        function closeScoreModal() {
            document.getElementById('scoreModal').classList.remove('show');
        }

        async function saveScore() {
            const homeScore = document.getElementById('homeScore').value;
            const awayScore = document.getElementById('awayScore').value;

            try {
                const response = await fetch('@Url.Action("UpdateScore", "Turnee")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        matchId: currentMatchId,
                        homeScore: parseInt(homeScore),
                        awayScore: parseInt(awayScore)
                    })
                });

                if (response.ok) {
                    window.location.reload();
                } else {
                    alert('A apărut o eroare la salvarea scorului.');
                }
            } catch (error) {
                alert('A apărut o eroare la salvarea scorului.');
                console.error('Error:', error);
            }

            closeScoreModal();
        }

        /* --------------
        nav menu behavior
        -------------- */
        function toggleMenu() {
            const mobileNav = document.getElementsByClassName('small-nav')[0];
            mobileNav.classList.toggle('show');
        }
    </script>

</body>

</html>