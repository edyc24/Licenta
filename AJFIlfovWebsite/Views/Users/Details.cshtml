@model AJFIlfov.BusinessLogic.Implementation.User.Models.UserManagmentModel

@{
    ViewData["Title"] = "User Details";
}

<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/Users/Details.css" />
    <link rel="stylesheet" href="~/css/Common/Common.css" />
</head>
<body>

<h2 class="page-title">Detalii Utilizator</h2>

<div class="container">
    <div class="localitati-edit-container">
        <dl class="row">
            <dt class="col-sm-2">Prenume</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.FirstName)</dd>

            <dt class="col-sm-2">Nume</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.LastName)</dd>

            <dt class="col-sm-2">Data Nașterii</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.BirthDay)</dd>

            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-2">Data Înregistrării</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.RegistrationDay)</dd>

            <dt class="col-sm-2">Descriere Profil</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.ProfileDescription)</dd>

            <dt class="col-sm-2">Rol</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Role)</dd>

            <dt class="col-sm-2">Categorie</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Category)</dd>

            <dt class="col-sm-2">Apartine Lot Liga 4/5?</dt>
            <dd class="col-sm-10">
                @if (Model.IsLiga4)
                {
                    <span>Da</span>
                }
                else
                {
                    <span>Nu</span>
                }
            </dd>

            <dt class="col-sm-2">Calificativ</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Calificativ)</dd>
        </dl>

        <div class="text-center">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="edit-button">Editează</a>
            <a asp-action="Index" class="back-button">Înapoi la Listă</a>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
