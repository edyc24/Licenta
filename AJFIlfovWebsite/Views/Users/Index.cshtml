@model IEnumerable<AJFIlfov.BusinessLogic.Implementation.User.Models.UserManagmentModel>

@{
    ViewData["Title"] = "Management Utilizatori";
}

<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/Users/Index.css" />
    <link rel="stylesheet" href="~/css/Common/Common.css" />
</head>
<style>
    html,
    body {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }
</style>
<body>

<h2 class="page-title">@ViewData["Title"]</h2>

<div class="localitati-container">
        <div class="action-buttons">
            <a class="btn btn-primary" asp-controller="Account" asp-action="Register">Creează Nou</a>
        </div>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Prenume</th>
                        <th>Nume</th>
                        <th>Email</th>
                        <th>Data Nașterii</th>
                        <th>Data Înregistrării</th>
                        <th>Rol</th>
                        <th>Categorie</th>
                        <th>Liga 4/5</th>
                        <th>Calificativ</th>
                        <th>Acțiuni</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.Email</td>
                            <td>@item.BirthDay.ToString("dd/MM/yyyy")</td>
                            <td>@item.RegistrationDay.ToString("dd/MM/yyyy")</td>
                            <td>@item.Role</td>
                            <td>@item.Category</td>
                            <td>
                                @if (item.IsLiga4)
                                {
                                    <span>Da</span>
                                }
                                else
                                {
                                    <span>Nu</span>
                                }
                            </td>
                            <td>@item.Calificativ</td>
                            <td>
                                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Detalii</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
